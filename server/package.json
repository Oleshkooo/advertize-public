{
    "name": "advertize-server",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "scripts": {
        "pre": "pnpm i -P",
        "start": "pnpm forever",
        "dev": "pnpm forever:kill; nodemon",
        "build": "NODE_ENV=production rollup -c",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --check src/**/*.ts",
        "format:fix": "prettier --write src/**/*.ts",
        "forever": "pnpm forever:kill; pnpm forever:clearLogs; pnpm forever:start; pnpm forever:logs",
        "forever:start": "NODE_ENV=production pm2 start ./index.js --name server --restart-delay 5000",
        "forever:restart": "pm2 reload server",
        "forever:logs": "pm2 logs server --lines 50",
        "forever:clearLogs": "pm2 flush",
        "forever:status": "pm2 status server",
        "forever:monitor": "pm2 monit server",
        "forever:kill": "pm2 kill"
    },
    "dependencies": {
        "body-parser": "^1.20.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "helmet": "^6.1.2",
        "mongoose": "^6.10.0",
        "nodemailer": "^6.9.1",
        "pm2": "^5.3.0",
        "telegraf": "^4.12.2",
        "typegram": "^5.0.0"
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^5.0.0",
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.0.2",
        "@rollup/plugin-terser": "^0.4.1",
        "@rollup/plugin-typescript": "^11.1.0",
        "@types/body-parser": "^1.19.2",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/node": "^18.15.11",
        "@types/nodemailer": "^6.4.7",
        "@typescript-eslint/eslint-plugin": "^5.57.1",
        "@typescript-eslint/parser": "^5.57.1",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.7",
        "rollup": "3.20.2",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-delete": "^2.0.0",
        "typescript": "^5.0.4"
    }
}
